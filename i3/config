# Assign multimedia keys for volume 
# https://faq.i3wm.org/question/125/how-to-change-the-systems-volume/?answer=249#post-id-249

# If you use alsa
#bindsym XF86AudioRaiseVolume exec amixer -q set Master 2dB+ unmute
#bindsym XF86AudioLowerVolume exec amixer -q set Master 2dB- unmute
#bindsym XF86AudioMute exec amixer -q set Master toggle

# If you use PulseAudio
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0  +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0  -5%
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle


# Brightness control
bindsym XF86MonBrightnessDown exec xbacklight -dec 1
bindsym XF86MonBrightnessUp exec xbacklight -inc 1 

# Taking Screenshot
bindsym Print exec "import -window root ~/Downloads/screenshot$(date +%Y%m%d-%H:%M:%S).png"



####################################################################
#                      Aplications                                 #
####################################################################



bindsym $mod+o mode "$mode_launcher"
set $mode_launcher Launch: [f]irefox [p]ycharm [b]tsync [g]imp 

mode "$mode_launcher" {
	bindsym f exec ~/.bin/firefox.sh, mode "default" 
	bindsym b exec ~/.bin/bittorrent-sync.sh, mode "default"  
	bindsym g exec ~/.bin/gimp.sh, mode "default"
	bindsym p exec ~/.bin/pycharm.sh, mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}



