[user]
    name = Mesut Tasci
    email = slackermesut@gmail.com
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    pager = less -FXRS
    editor = vim
    excludesfile = ~/.gitignore
    autocrlf = false
    filemode = false 
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff -b
    dfc = diff -b --cached
    dfw = diff -b --word-diff
    lg = log -p --name-only
    lgg = log --graph
    lgf = log --graph --name-only
    lgp = log --pretty=format:'%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn]' --decorate --date=short
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    sl = stash list
    
    # List unpushed commit on current branch
    # http://stackoverflow.com/q/2016901/1027507
    lsu = log @{u}..
    # List unpushed commits
    lsup = log --branches --not --remotes --simplify-by-decoration --decorate --oneline
    
    standup = !git log --since='1 day ago' --oneline --author="$(git config user.email)"
    ann = annotate
    undo = reset --soft HEAD^
    sshow = "!f() { git stash show stash^{/$*}; }; f"
    sapply = "!f() { git stash apply stash^{/$*}; }; f"
    ls-conflicts = diff --name-only --diff-filter=U
    amend = commit --amend -C HEAD
    ready = rebase -i @{u}
    assume   = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed  = "!git ls-files -v | grep ^h | cut -c 3-"
    unstage = reset HEAD

    ;Stage all manually deleted files
    rm-deleted = "!f() { for x in `git status | grep deleted | awk '{print $3}'`; do git rm $x; done; }; f"
    permission-reset='!git diff -p -R | grep -E "^(diff|(old|new) mode)" | git apply' 

[push]
    default = current
[merge]
    summary = true
[branch]
    autosetupmerge = true
[diff]
    algorithm = patience

[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = yellow red bold
    new = yellow green bold
[color "status"]
    added = green reverse
    changed = yellow reverse
    untracked = magenta reverse


[rebase]
	autosquash = true
