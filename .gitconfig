[user]
    name = Mesut Tasci
    email = slackermesut@gmail.com
[color]
    branch = auto
    diff = auto
    status = auto
[color]
    ui = true
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    pager = less -FXRS
    editor = vim
    excludesfile = ~/.gitignore
    autocrlf = false
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff -b
    dfc = diff -b --cached
    dfw = diff -b --word-diff
    lg = log -p --name-only
    lgg = log --graph
    lgf = log --graph --name-only
    lgp = log --pretty=format:'%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn]' --decorate --date=short
    standup = log --since '1 day ago' --oneline --author slackermesut@gmail.com
    ann = annotate
    undo = reset --soft HEAD^
    sshow = "!f() { git stash show stash^{/$*}; }; f"
    sapply = "!f() { git stash apply stash^{/$*}; }; f"
    ls-conflicts = diff --name-only --diff-filter=U
[push]
	default = matching
[merge]
    summary = true
[branch]
    autosetupmerge = true
