startup_message off
deflogin on
defscrollback 1024

# setting screen bottom bar
hardstatus off
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d.%m.%Y %{W} %c %{g}]'

# start windows from 1 not 0
bind c screen 1
bind ^c screen 1
bind 0 select 10 
screen 1

# clear screen when quitting from editors
altscreen on

# enabling utf-8
defutf8 on
utf8 on on
encoding UTF-8 UTF-8
defencoding UTF-8
